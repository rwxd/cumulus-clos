# Generated by Ansible

# Defaults

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
    alias Management
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2

# Specific device
## Physical Ports
{% for swp in interfaces.physicals %}
auto {{ swp.name }}
iface {{ swp.name }}
{% if swp.description  %}
    alias {{ swp.description }}
{% endif %}
{% if "address" in swp %}
    address {{ swp.address }}
{% endif %}
{% if not swp.enabled %}
    link-down yes
{% endif %}

{% endfor +%}